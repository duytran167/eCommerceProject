@model IEnumerable<eCommerceProject.Models.Contact>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Supported</h2>


<table class="table">
	<tr>
		<th>
			Date Send
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FullName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>



		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			@if (item.Noti == false)
			{
				<td class="text-primary">
					@Html.DisplayFor(modelItem => item.ArticleDate)
				</td>
				<td class="text-primary">
					@Html.DisplayFor(modelItem => item.FullName)
				</td>

				<td class="text-primary">
					@Html.DisplayFor(modelItem => item.Email)
				</td>
			}
			else
			{
				<td>
					@Html.DisplayFor(modelItem => item.ArticleDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FullName)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
			}





		<td>
			@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-tone m-r-5" })
			
			<button class="btn btn-danger btn-tone" onclick="remove(@item.Id)">Delete</button>
		</td>
		</tr>
	}

</table>
@section scripts{
	@Scripts.Render("~/bundles/jqueryval")
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script>
				
		//delete
		function remove(id) {
			swal({
				title: "Are you sure?",
				
				icon: "warning",
				buttons: true,
				dangerMode: true,
			})
				.then((willDelete) => {
					event.preventDefault()
					if (willDelete) {
						$.ajax({
							type: "POST",
							url: "/Admin/Contact/Delete/" + id,
							contentType: "application/json; charset=utf-8",
							dataType: "json",
							success: function (response) {
								swal("Delete Success!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});

							},
							failure: function (response) {
								swal("Delete Success!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});
							},
							error: function (response) {
								swal("Delete Success!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});
							}

						});

					}
					else {
						swal("Let's Continue!");
					}
				});
		}
	</script>
}
