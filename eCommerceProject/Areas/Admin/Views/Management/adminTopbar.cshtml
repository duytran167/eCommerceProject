@model eCommerceProject.Models.IndexViewModel
@{
	ViewBag.Title = "adminTopbar";
	Layout = "~/Areas/Admin/Views/Shared/_BlankLayout.cshtml";
}
<div class="pointer" data-toggle="dropdown">
	<div class="avatar avatar-image  m-h-10 m-r-15">
		@if (Model.User.ImagePath == null)
		{
			<img src="" alt="">
		}
		<img src="@Url.Content(Model.User.ImagePath)" alt="">
	</div>
</div>
<div class="p-b-15 p-t-20 dropdown-menu pop-profile">
	<div class="p-h-20 p-b-15 m-b-10 border-bottom">
		<div class="d-flex m-r-50">
			<div class="pointer" data-toggle="dropdown">
				<div class="avatar avatar-image  m-h-10 m-r-15">
					@if (Model.User.ImagePath == null)
					{
						<img src="" alt="">
					}
					<img src="@Url.Content(Model.User.ImagePath)" alt="">
				</div>
			</div>
			<div class="m-l-10">
				<p class="m-b-0 text-dark font-weight-semibold">@Model.User.UserName</p>
				
			</div>
		</div>
	</div>

