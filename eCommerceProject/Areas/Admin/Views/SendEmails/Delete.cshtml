@model eCommerceProject.Models.SendEmail

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<h2 class="header-title">@ViewBag.Title</h2>
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			<a class="breadcrumb-item" href="#">Send Mail</a>
			<span class="breadcrumb-item active">@ViewBag.Title</span>
		</nav>
	</div>

</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SendEmail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Customer Email:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>

        <dt>
            @Html.DisplayName("Subject: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subject)
        </dd>

        <dt>
            @Html.DisplayName("Body: ")
        </dt>

        <dd>
            @Html.Raw(Model.body)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" onclick="return confirm('Are you sure?')" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
