@model eCommerceProject.ViewModel.MuaHangSuccessVM
@{
	ViewBag.Title = "Order Failed";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
	.nice-select .list {
		border-radius: 0px;
		overflow-y: auto;
		overflow: hidden;
		max-height: 200px;
		overflow-y: scroll;
	}

	.nice-select .option:hover, .nice-select .option.focus, .nice-select .option.selected.focus {
		color: red;
		background: none;
	}
</style>

<link href="~/Content/mainNew.css" rel="stylesheet" />



<main class="main-content">
	<div class="container">
		<div class="row h-100">
			<div class="col-sm-12 align-self-center">
				<div class="col d-flex align-items-center justify-content-center">

					<div class="breadcrumb-item">
						<h2 class="breadcrumb-heading">ORDER FAILED!</h2>
						<a> @ViewBag.Message </a>
						<ul>
							<li>
								<a href="/">Home <i class="pe-7s-angle-right"></i></a>
							</li>
							<li>ORDER FAILED</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

	</div>
	<div class="container h-100 justify-content-between">
		<div class="row h-100">
			<div class="col-lg-12">
				
				<div class="text-center">
					<h4 class="cl4"> Something wrong while your transaction! </h4>
					<img src="https://cdni.iconscout.com/illustration/premium/thumb/payment-error-2130357-1800921.png" />
				</div>
			</div>
		</div>

	</div>
	
</main>
