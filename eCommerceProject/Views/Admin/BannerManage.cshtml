@model IEnumerable<eCommerceProject.Models.BannerSlider>
@{
	ViewBag.Title = "Banner Image Manage";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/toastr.css" rel="stylesheet" />

<h2>Banner Image Slider </h2>


<br />
<button type="button" class="btn btn-primary btn-lg " data-toggle="modal" data-target="#myModal">
	<i class="fas fa-plus"> Add New Image</i>

</button>
<!-- Add Banner Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body" id="formStudentId">
				@{
					Html.RenderAction("CreateBanner", "Admin");
				}
			</div>
		</div>
	</div>
</div>

<table class="table">
	<thead>
		<tr>

			<th scope="col">Tilte</th>
			<th scope="col">Description</th>
			<th scope="auto">ImagePath</th>
			<th scope="auto">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>

				<td>@item.Title</td>
				<td>@item.Description</td>
				<td><img class="col-md-12" src="@Url.Content(@item.ImagePath)" /></td>
				<td class="col-sm-3">

					<input type="button" value="Delete" class="btn btn-default" onclick="remove(@item.Id)">
					<button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModalS">Update</button>

					@*@Html.ActionLink("Delete", "DeleteBanner", new { id = item.Id },
						new { onclick = "return confirm('Are you sure wants to delete?');" })*@

				</td>
			</tr>
			<!-- Update Banner Modal -->
			<div class="modal fade" id="myModalS" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body" id="updateBanner">
							@{
								Html.RenderAction("UpdateBanner", "Admin", new { id = @item.Id });
							}
						</div>
					</div>
				</div>
			</div>
		}
	</tbody>
</table>
@section scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script type="text/javascript">

		function remove(id) {
			swal({
				title: "Are you sure?",
				text: "Once deleted, you will not be able to recover your profile!",
				icon: "warning",
				buttons: true,
				dangerMode: true,
			})
				.then((willDelete) => {
					event.preventDefault()
					if (willDelete) {
						$.ajax({
							type: "POST",
							url: "/Admin/DeleteBanner/" + id,
							contentType: "application/json; charset=utf-8",
							dataType: "json",
							success: function (response) {
								swal("Banner Image has been deleted!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});

							},
							failure: function (response) {
								swal("Banner Image has been deleted!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});
							},
							error: function (response) {
								swal("Banner Image has been deleted!", {
									icon: "success",
								}).then(function () {
									window.location.reload();
								});
							}

						});

					}
					else {
						swal("Let's Continue!");
					}
				});
		}
		
	</script>
}