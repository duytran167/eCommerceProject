@model IEnumerable<eCommerceProject.Models.Product>
@{
	ViewBag.Title = "Collection"; 
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 col-lg-12 p-b-80">
			<div class=" p-r-0-lg">
				<!-- item blog -->
				@foreach (var item in Model.Take(1))

				{<div class="p-b-63">

						<a href="@Url.Action("DetailsCollection","Home",new {id=item.Id})" class="hov-img0 how-pos5-parent">
							<img src="@Url.Content(item.Collection.ImagePath)" alt="IMG-BLOG">


						</a>
						<div class="p-t-32">
							<h4 class="p-b-15 text-center">
								<a class="text-center ltext-108 cl2 hov-cl1 trans-04">
									@item.Collection.Name
								</a>
							</h4>

							<p class="align-content-center text-center">@Html.Raw(item.Collection.Description)</p>


						</div>

					</div>
				}

			</div>
		</div>


	</div>
	<div class="row isotope-grid">
		@if (Model != null)
		{
			foreach (var item in Model)
			{
				<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
					<!-- Block2 -->
					<div class="block2" style="height:100%; width:100%">
						<div class="block2-pic hov-img0">
							@foreach (var photo in item.ImageProducts.GroupBy(x => x.FileName).First())
							{
								<img style="height:100%; width:100%" src="@Url.Content(photo.FileName)" alt="IMG-PRODUCT">
							}
							@if (item.BestSellers == true)
							{
								<div class="flex-col-c-m size-105 bg1 how-pos5 ">

									<span class="stext-109 cl0 txt-center">
										Best Seller
									</span>
								</div>
							}
							@if (item.Discount != null)
							{<div class="flex-col-c-m size-105  bg7 how-pos5 ">

									<span class="stext-109 cl0 txt-center">
										-@item.Discount%
									</span>
								</div>}

							@Html.ActionLink(" ", "DetailsProduct", new { id = item.Id }, new { @class = "anticon anticon-zoom-in block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04" })
						</div>

						<div class="block2-txt flex-w flex-t p-t-14">
							<div class="block2-txt-child1 flex-col-l ">
								<a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
									@item.ProductName
								</a>

								@if (item.Discount != null)
								{
									<span class="stext-105 cl3">
										<del>@item.Price.ToString("#,##0") VND
									</span>
									<span class="stext-105 cl3">

										@item.PriceSale.ToString("#,##0") VND
									</span>
								}
								else
								{
									<span class="stext-105 cl3">

										@item.PriceSale.ToString("#,##0") VND
									</span>

								}

							</div>

							<div class="block2-txt-child2 flex-r p-t-3">
								<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
									<img class="icon-heart1 dis-block trans-04" src="~/Content/ImageProduct/icons/icon-heart-01.png" alt="ICON">
									<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Content/ImageProduct/icons/icon-heart-02.png" alt="ICON">
								</a>
							</div>
						</div>
					</div>




				</div>
			}
		}
		else
		{
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
				<h6> No product in here! </h6>
			</div>
		}
	</div>
