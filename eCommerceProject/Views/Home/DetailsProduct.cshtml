<script src="~/vendor/perfect-scrollbar/perfect-scrollbar.min.js"></script>
<script>


	//request login
		function RequestLogin() {
			if ($("#chkcondition").is(':checked')) {
				return true;
			}
			else {
				swal("Please login!!!", "Login to Comment");
				return false;
			}
		}

	$('.js-pscroll').each(function () {
		$(this).css('position', 'relative');
		$(this).css('overflow', 'hidden');
		var ps = new PerfectScrollbar(this, {
			wheelSpeed: 1,
			scrollingThreshold: 1000,
			wheelPropagation: false,
		});

		$(window).on('resize', function () {
			ps.update();
		})
	});
	//rate
	function SCRate() {
				for (var i = 1; i <= @totalRating; i++) {
						$("#sRate" + i).attr('class', 'starGlowN');
				}
		}
		$(function(){
				SCRate();
		});
	//delete comment by user
	function removeCmt(id) {
		swal({
			title: "Are you sure?",
			text: "Once deleted, you will not be able to recover your comment!",
			icon: "warning",
			buttons: true,
			dangerMode: true,
		})

			.then((willDelete) => {
				event.preventDefault()
				if (willDelete) {
					$.ajax({
						type: "POST",
						url: "/Home/DeleteCommentandRating/" + id,
						contentType: "application/json; charset=utf-8",
						dataType: "json",
						success: function (response) {
							swal("Delete Success!", {
								icon: "success",
							}).then(function () {
								window.location.reload();
							});

						},
						failure: function (response) {
							swal("Delete Success!", {
								icon: "success",
							}).then(function () {
								window.location.reload();
							});
						},
						error: function (response) {
							swal("Delete Success!", {
								icon: "success",
							}).then(function () {
								window.location.reload();
							});
						}

					});

				}
				else {
					swal("Let's Continue!");
				}
			});
	}

	//addtocart
		
  $("#add-to-cart").click(function () {
			
				var productid = @Model.Product.Id;
				var amount = $('#txtsoLuong').val();
			var size = $('#txtsize option:selected').val();
				$.ajax({
					url: '@Url.Action("AddToCart", "Cart")',
					type: "POST",
					dataType: "JSON",
					data: {
						SanPhamID: productid,
						amount: amount,
						size: size,
					},
					success: function (response) {
						swal("Add Success!", {
							icon: "success",
						}).then(function () {
							window.location.reload();
						});

					},
					error: function (error) {
						swal("There was an error posting the data to the server: " + error.responseText);
					}
				});
			});


		


</script>
