@model IEnumerable<eCommerceProject.Models.Product>

@{
	ViewBag.Title = "BlogFeature";
	Layout = "~/Views/Shared/_BlankLayout.cshtml";
	
}


<div class="p-t-65">
	<h4 class="mtext-112 cl2 p-b-33">
		Featured Product
	</h4>

	<ul>
		@foreach (var item in Model)
		{
			<li class="flex-w flex-t p-b-30">

				@foreach (var photo in item.ImageProducts.GroupBy(x => x.FileName).First())
				{
				<a href="@Url.Action("DetailsProduct","Home",  new { id = item.Id })" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">

					<img style="width: 90px" src="@Url.Content(photo.FileName)" alt="IMG-PRODUCT">
					
				</a>
				}

			<div class="size-215 flex-col-t p-t-8">
				<a href="@Url.Action("DetailsProduct","Home",  new { id = item.Id })" class="stext-116 cl8 hov-cl1 trans-04">
					@item.ProductName
				</a>
				@if (item.Discount != null)
				{
			<span class="mtext-106 cl2">
				@item.PriceSale.ToString("#,##0") VND
			</span>
			<span class="mtext-106 cl7">
				<del>@item.Price.ToString("#,##0") VND</del>
				<span class="mtext-106 cl13">
					-@item.Discount%
				</span>
			</span>

					

				}
				else
				{<span class="mtext-106 cl2">
						@item.Price.ToString("#,##0") VND
					</span>}

				
			</div>
			</li>
		}
	</ul>
</div>
