@model IEnumerable<eCommerceProject.Models.BlogPost>
@{
		ViewBag.Title = "ListBlog";
		Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<section class="sec-blog bg0 p-t-20 p-b-60">
	<div class="container-fluid">
		<div class="p-b-10">
			<h6 class="ltext-101 cl5 txt-center respon1">
				COCO BLOGS

				<div class="btn-holder">

					<button class="btn1 button2 hover-slide-right">
						<span>View More</span>
					</button>



				</div>
			</h6>
		</div>

		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-sm-6 col-md-4 p-b-40">
					<div class="blog-item">
						<div class="hov-img0">
							<a href="@Url.Action("DetailsBlog","Home",new {id=item.Id})" >
								<img src="@Url.Content(item.ImagePath)" alt="IMG-BLOG">

							</a>
						</div>

						<div class="p-t-15">


							<h4 class="p-b-12">
								<a href="blog-detail.html" class="mtext-100 cl2 hov-cl1 trans-04">
									@item.Title
								</a>
							</h4>


						</div>
					</div>
				</div>
			}
			</div>
	</div>
</section>

