@model IEnumerable<eCommerceProject.Models.BlogCategory>
@{
    ViewBag.Title = "CatgegoriesFeature";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
<div class="bor17 of-hidden pos-relative">
	@using (Html.BeginForm("Blog", "Home", "POST"))
	{


		@Html.TextBox("search", null, new { @type = "text", @class = "stext-103 cl2 plh4 size-116 p-l-28 p-r-55", @placeholder = "Search..." })

		<button class="flex-c-m size-122 ab-t-r fs-18 cl4 hov-cl1 trans-04">
			<i class="zmdi zmdi-search"></i>
		</button>

	}



</div>
<div class="p-t-55">
	<h4 class="mtext-112 cl2 p-b-33">
		Categories
	</h4>

	<ul>
		@foreach (var item in Model)
		{
			<li class="bor18">
				<a href="@Url.Action("DetailsBlogCategories","Home",new {id=item.Id})" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
					@item.CategoryName
				</a>
			</li>
		}


	</ul>
</div>

